__author__ = 'MagdaTarka'
from itertools import product

def read_file(a): #wczytanie danych z pliku
    p=open(a,'r')
    data=p.readlines()
    p.close()
    for i in range(len(data)):
        data[i]=data[i].strip()
    return data

def generate_kmers(k): #generuje wszystkie k-mery zlozone z liter A, C, T, G dlugosci k podanej jako parametr
    prod=product('ACTG',repeat=k)
    kmers=[]
    for i in prod:
        kmer=''
        for j in i:
            kmer=kmer+j
        kmers.append(kmer)
    return kmers

def generate_all_kmers(n): #generuje wszystkie k-mery zlozone z liter A, C, T, G dla k od 1 do n, gdzie n podane jest jako parametr, zwraca macierz o n wierszach, w k-tym wierszy sÄ… k-mery
    kmers=[]
    for i in range(1,n+1):
        kmers.append(generate_kmers(i))
    return kmers


def test():
    enhancers=read_file('enhancers_heart.fa')
    random=read_file('random.fa')
    len=enhancers[0].__len__() #dlugosc sekwencji w plikach enhancers i random
    for i in generate_all_kmers(3):
        print i
test()
